        <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
        <p><strong>Info!</strong> @TempData["infoAlert"]</p>
    </div>
}

<script>
    $(document).ready(function () {
        setTimeout(function () {
            $(".alert").alert('close');
        }, 5000);
    });
</script>

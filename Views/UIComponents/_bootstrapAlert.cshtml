        <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
        <p><strong>Error!</strong> @TempData["errorAlert"]</p>
    </div>
}

<!-- Warning Alert -->
@if (TempData["warningAlert"] != null)
